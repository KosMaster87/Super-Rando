{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules|\\.test\\.js$|\\.html$)"
  },
  "opts": {
    "destination": "./docs",
    "recurse": true,
    "template": "./node_modules/clean-jsdoc-theme"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "clean-jsdoc-theme": {
      "theme": "dark",
      "title": "Super-Rando-SPA Documentation",
      "description": "Complete documentation for Super-Rando Single Page Application - Restaurant ordering system built with vanilla JavaScript",
      "logo": "/assets/icons/star.png",
      "menu": [
        {
          "title": "🏠 Home",
          "link": "index.html"
        },
        {
          "title": "📚 Global Functions",
          "link": "global.html"
        },
        {
          "title": "🔗 GitHub Repository",
          "link": "https://github.com/KosMaster87/Super-Rando",
          "target": "_blank"
        },
        {
          "title": "🚀 Live Demo",
          "link": "#",
          "target": "_blank"
        }
      ],
      "search": true,
      "collapse": false,
      "sort": true,
      "sectionOrder": [
        "Classes",
        "Modules",
        "Global",
        "Namespaces",
        "Events",
        "Tutorials",
        "Interfaces"
      ],
      "meta": {
        "keywords": "JavaScript, SPA, Restaurant, Documentation, JSDoc, ES6, Modules, State Management"
      }
    },
    "cleverLinks": false,
    "monospaceLinks": false
  }
}
